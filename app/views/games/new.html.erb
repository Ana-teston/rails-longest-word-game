<h1>New Game</h1>

<div class="letter-container">
  <% @letters.each do |letter| %>
    <div class="letter-box"><%= letter %></div>
  <% end %>
</div>
<div class="container">
  <form action="/score" method="get" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">What is the longest word you can find?</label>
  <input type="text" id="word" name="word" required>
  <button type="submit" value="Submit" class="btn btn-primary">Play</button>
</form>
</div>
